    "collection.delete": {
      "post": {
        "description": "Quando uma coleção é excluída definitivamente.",
        "requestBody": {
          "description": "Quando uma coleção é definitivamente",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "data": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "format": "cuid"
                      }
                    }
                  },
                  "type": {
                    "type": "string"
                  }
