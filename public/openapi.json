  "servers": [
    {
      "url": "https://api.lojinha.dev/v1",
      "description": "Produção"
    }
  ],
  "webhooks": {
    "collection.create": {
      "post": {
        "description": "Quando uma nova coleção é criada.",
        "requestBody": {
          "description": "Quando uma nova coleção é criada",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CollectionData"
              },
              "example": {
                "data": {
                  "id": "col_h35xsnhkyz6mephf0nu3ng0w",
                  "name": "Puma",
                  "slug": "puma",
                  "description": null,
                  "createdAt": "2023-12-04 22:06:31.369478",
                  "updatedAt": null,
                  "deletedAt": null
                },
                "type": "collection.create"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Se a solicitação for feita com sucesso, deve retornar um status 200."
          }
        }
      }
    },
    "collection.update": {
      "post": {
        "description": "Quando uma coleção é atualizada.",
        "requestBody": {
          "description": "Quando uma coleção é atualizada",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Collection"
              },
              "example": {
                "data": {
                  "id": "col_h35xsnhkyz6mephf0nu3ng0w",
                  "name": "Puma x IVE",
                  "slug": "puma-x-ive",
                  "description": null,
                  "createdAt": "2023-12-04 22:06:31.369478",
                  "updatedAt": "2023-12-07 16:06:31.369478",
                  "deletedAt": null
                },
                "type": "collection.update"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Se a solicitação for feita com sucesso, deve retornar um status 200."
          }
        }
      }
    },
    "collection.archive": {
      "post": {
        "description": "Quando uma coleção é arquivada.",
        "requestBody": {
          "description": "Quando uma coleção é arquivada",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "data": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "format": "cuid"
                      }
                    }
                  },
                  "type": {
                    "type": "string"
                  }
                }
              },
              "example": {
                "data": {
                  "id": "col_h35xsnhkyz6mephf0nu3ng0w"
                },
                "type": "collection.archive"
              }
