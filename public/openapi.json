  },
  "paths": {
    "/collections": {
      "get": {
        "summary": "Lista todas as coleções da loja.",
        "responses": {
          "200": {
            "description": "200",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "collections": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Collection",
                        "parents": {
                          "type": "array",
                          "items": {
                            "$ref": "#/components/schemas/Collection"
                          }
                        }
                      }
                    },
                    "total": {
                      "type": "number",
                      "example": 1
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "CollectionData": {
        "properties": {
          "data": {
            "$ref": "#/components/schemas/Collection"
          },
          "type": {
            "type": "string"
          }
        }
      },
      "Collection": {
        "type": "object",
        "required": ["id", "name", "slug", "createdAt"],
        "properties": {
          "id": {
            "type": "string",
            "format": "cuid"
          },
          "name": {
            "type": "string",
            "example": "Puma"
          },
          "slug": {
            "type": "string",
            "example": "puma"
          },
          "description": {
            "type": "string",
            "example": "Puma"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          },
          "deletedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  }
}
