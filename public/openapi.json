          }
        },
        "responses": {
          "200": {
            "description": "Se a solicitação for feita com sucesso, deve retornar um status 200."
          }
        }
      }
    },
    "collection.restore": {
      "post": {
        "description": "Quando uma coleção é restaurada.",
        "requestBody": {
          "description": "Quando uma coleção é restaurada",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "data": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "format": "cuid"
                      }
                    }
                  },
                  "type": {
                    "type": "string"
                  }
                }
              },
              "example": {
                "data": {
                  "id": "col_h35xsnhkyz6mephf0nu3ng0w"
